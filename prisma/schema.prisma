generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== AUTH MODELS ====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts         Account[]
  sessions         Session[]
  workspaceMembers WorkspaceMember[]
  repurposeJobs    RepurposeJob[]
  outputs          Output[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== WORKSPACE MODELS ====================

model Workspace {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  logo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members       WorkspaceMember[]
  brandVoices   BrandVoice[]
  projects      Project[]
  templates     Template[]
  repurposeJobs RepurposeJob[]
  subscription  Subscription?
  invitations   Invitation[]
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  role        WorkspaceRole @default(MEMBER)
  joinedAt    DateTime      @default(now())
  userId      String
  workspaceId String

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([userId, workspaceId])
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model Invitation {
  id          String           @id @default(cuid())
  email       String
  role        WorkspaceRole    @default(MEMBER)
  token       String           @unique
  status      InvitationStatus @default(PENDING)
  expiresAt   DateTime
  createdAt   DateTime         @default(now())
  workspaceId String

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([email, workspaceId])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

// ==================== BRAND & CONTENT MODELS ====================

model BrandVoice {
  id           String   @id @default(cuid())
  name         String
  description  String?
  tone         String[] // e.g., ["professional", "friendly", "authoritative"]
  styleRules   Json?    // Custom style guidelines
  doExamples   String[] // Examples of good content
  dontExamples String[] // Examples of what to avoid
  isDefault    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  workspaceId  String

  workspace     Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  repurposeJobs RepurposeJob[]
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String?  // For UI organization
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  workspaceId String

  workspace     Workspace      @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  repurposeJobs RepurposeJob[]
}

model Template {
  id             String   @id @default(cuid())
  name           String
  description    String?
  platform       Platform
  promptTemplate String   @db.Text
  variables      String[] // Dynamic variables in the template
  isSystem       Boolean  @default(false)
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  workspaceId    String?  // Null for system templates

  workspace Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  outputs   Output[]
}

enum Platform {
  TWITTER
  LINKEDIN
  INSTAGRAM
  FACEBOOK
  TIKTOK
  YOUTUBE_SHORT
  YOUTUBE_LONG
  BLOG
  EMAIL
  NEWSLETTER
  PODCAST_NOTES
  THREAD
  CAROUSEL
  PRESS_RELEASE
  PRODUCT_DESCRIPTION
  AD_COPY
  LANDING_PAGE
  WHATSAPP
  TELEGRAM
  REDDIT
  QUORA
  MEDIUM
  SUBSTACK
  CUSTOM
}

// ==================== REPURPOSE JOB MODELS ====================

model RepurposeJob {
  id              String     @id @default(cuid())
  title           String?
  sourceType      SourceType
  sourceContent   String     @db.Text
  sourceUrl       String?
  sourceMetadata  Json?      // Original content metadata (title, author, etc.)
  goal            String?    // User's goal for the content
  targetPlatforms Platform[]
  status          JobStatus  @default(PENDING)
  errorMessage    String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  completedAt     DateTime?

  userId       String
  workspaceId  String
  projectId    String?
  brandVoiceId String?

  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace  Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  project    Project?    @relation(fields: [projectId], references: [id], onDelete: SetNull)
  brandVoice BrandVoice? @relation(fields: [brandVoiceId], references: [id], onDelete: SetNull)
  outputs    Output[]
}

enum SourceType {
  TEXT
  URL
  YOUTUBE
  PDF
  AUDIO
  VIDEO
}

enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

// ==================== OUTPUT MODELS ====================

model Output {
  id         String       @id @default(cuid())
  platform   Platform
  content    String       @db.Text
  metadata   Json?        // Platform-specific metadata (hashtags, mentions, etc.)
  status     OutputStatus @default(DRAFT)
  version    Int          @default(1)
  isFavorite Boolean      @default(false)
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  jobId      String
  userId     String
  templateId String?

  job      RepurposeJob    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  template Template?       @relation(fields: [templateId], references: [id], onDelete: SetNull)
  versions OutputVersion[]
}

enum OutputStatus {
  DRAFT
  APPROVED
  PUBLISHED
  ARCHIVED
}

model OutputVersion {
  id        String   @id @default(cuid())
  content   String   @db.Text
  version   Int
  createdAt DateTime @default(now())
  outputId  String

  output Output @relation(fields: [outputId], references: [id], onDelete: Cascade)
}

// ==================== BILLING MODELS ====================

model Subscription {
  id                   String             @id @default(cuid())
  stripeCustomerId     String             @unique
  stripeSubscriptionId String?            @unique
  stripePriceId        String?
  plan                 SubscriptionPlan   @default(FREE)
  status               SubscriptionStatus @default(ACTIVE)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)

  // Usage tracking
  jobsUsedThisMonth    Int @default(0)
  jobsLimit            Int @default(10)  // Based on plan
  outputsUsedThisMonth Int @default(0)
  outputsLimit         Int @default(50)  // Based on plan

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  workspaceId String   @unique

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
}

enum SubscriptionPlan {
  FREE
  STARTER
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELLED
  TRIALING
  INCOMPLETE
}
